@model IEnumerable<BlogApp.Models.Post>

@{
    ViewData["Title"] = "Destinations";
}


<style>
/*     body {
        background-image: url("/img/IMG_2632.jpeg");
        background-repeat: no-repeat;
        background-attachment: fixed;
    } */

    body {
        background-image: url("/img/details2.jpg");
        background-repeat: no-repeat;
        width: 1513px;
        height: 2016px;
        background-size: cover;
        background-position: 50% 50%;
        text-align: center;
        margin: auto;
        padding: 0;
    }

    .row{
        margin-top: 100px;
    }



    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 20px rgba(0,0,0,.12), 0 4px 8px rgba(0,0,0,.06);
    }

    .card {
        border-radius: 10px;
        background: rgb(88 99 95 / 56%);
        box-shadow: 0 6px 10px #000, 0 0 6px rgba(0, 0, 0, .05) ;
        transition: .3s transform cubic-bezier(.155,1.105,.295,1.12),.3s box-shadow,.3s -webkit-transform cubic-bezier(.155,1.105,.295,1.12);
        cursor: pointer;
    }

    .card-img-top {
        width: 100%;
        height: 15vw;
        object-fit: cover;
    }


</style>



<div class="row gx-4 gx-lg-5 ">
@foreach (var item in Model)
{

    <div class="col-md-4 mb-5">
            <div class="card bg-gradient" style="width: 18rem;">
@*                     <img class="card-img-top" src="~/@Html.DisplayFor(modelItem => item.ImagePath)" alt="Card image cap">
 *@        <div class="card-body">
            <p class="card-text text-white">@Html.DisplayFor(modelItem => item.Title)</p>
        </div>
                <div class="card-footer"><a class="btn btn-outline-dark btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a></div>

    </div>
    </div>
}
</div>